{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2015"
    ],
    "jsx": "react-jsx",
    "target": "ES5",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
